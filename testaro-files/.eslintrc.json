{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "MemberExpression": 0,
        "ObjectExpression": "first"
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-use-before-define": [
      "error"
    ],
    "brace-style": [
      "error",
      "stroustrup"
    ]
  }
}
